from bs4 import BeautifulSoup
import requests
import lxml


class artist_crawler:

    def __init__(self, img_profile, name, real_name,
                 nationality, birth_date, constellation,
                 blood_type, intro):
        self.img_profile = img_profile
        self.name = name
        self.real_name = real_name
        self.nationality = nationality
        self.birth_date = birth_date
        self.constellation = constellation
        self.blood_type = blood_type
        self.intro = intro

    def melon_artist_crawler(artist_id):
        url = f'http://www.melon.com/artist/detail.htm?artistId={artist_id}'
        print(url)
        response = requests.get(url)
        print(response)
        source = response.text
        print(source)
        soup = BeautifulSoup(source, "lxml")
        # print(soup)


if __name__ == "__main__":
    artist_id = 1191
    ac = artist_crawler
    ac.melon_artist_crawler(artist_id)